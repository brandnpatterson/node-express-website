{
  "name": "node-website",
  "private": true,
  "version": "1.0.0",
  "description": "node-website",
  "main": "index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "install:client": "npm install --prefix client",
    "build:client": "npm run build --prefix client",
    "client": "npm start --prefix client",
    "start": "node .",
    "server": "nodemon . --ignore client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint .",
    "lint:all": "eslint . && npm run lint --prefix client",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "test": "jest",
    "test:all": "concurrently \"npm run test\" \"npm run test --prefix client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install:client --dev && npm run build:client"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql2": "^2.1.0",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup",
      "<rootDir>/client"
    ]
  },
  "lint-staged": {
    "*.+(js)": [
      "npm run lint:all"
    ],
    "**/**/*.+(js)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:all && lint-staged"
    }
  }
}
