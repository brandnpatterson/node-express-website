{
  "name": "node-website",
  "private": true,
  "version": "1.0.0",
  "description": "node-website",
  "main": "index.js",
  "author": "Brandon Patterson",
  "scripts": {
    "start": "node .",
    "server": "nodemon .",
    "client": "gulp",
    "client:build": "gulp build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "test": "jest",
    "heroku-postbuild": "npm run client:build"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.3",
    "mysql2": "^2.1.0",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.0",
    "eslint-config-prettier": "^6.10.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-stream": "^5.2.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup",
      "<rootDir>/client"
    ]
  },
  "lint-staged": {
    "*.+(js)": [
      "npm run lint"
    ],
    "**/**/*.+(js)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  }
}
